<div class="login-margins-30 card">

  <% if notice != nil %>
    <h6 id="alert" class="alert alert-info" style="text-align: center; margin-top: 0;"><%= notice %></h6>
  <% end %>

  <h4 class="div-custom">
    <strong>Email: <%= @admin.email %></strong>
  </h4>

  <h4 class="div-custom">
    <strong>Name: <%= @admin.name %></strong>
  </h4>

  <%= link_to 'Edit',
              edit_admin_path(@admin),
              class: "btn btn-primary btn-block",
              style: "color: #ffffff;" %>

</div>