<div class="login-margins-30 card">

  <% if notice != nil %>
    <h6 id="alert" class="alert alert-info" style="text-align: center; margin-top: 0;"><%= notice %></h6>
  <% end %>

  <h4 class="div-custom">
    <strong>Book: <%= @book_history.book.title %></strong>
  </h4>

  <h4 class="div-custom">
    <strong>Library: <%= @book_history.library.name %></strong>
  </h4>

  <h4 class="div-custom">
    <strong>Student: <%= @book_history.student.email %></strong>
  </h4>

  <h4 class="div-custom">
    <strong>Action: <%= @book_history.action %></strong>
  </h4>

  <!--<%# link_to 'Edit', edit_book_history_path(@book_history) %> |-->

</div>