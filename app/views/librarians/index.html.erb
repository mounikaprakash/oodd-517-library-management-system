<p id="notice"><%= notice %></p>

<h1>Librarians</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Password</th>
      <th>Is approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @librarians.each do |librarian| %>
      <tr>
        <td><%= librarian.email %></td>
        <td><%= librarian.name %></td>
        <td><%= librarian.password %></td>
        <td><%= librarian.is_approved %></td>
        <td><%= link_to 'Show', librarian %></td>
        <%if session[:user_type] == ApplicationController::TYPE_ADMIN %>
          <td><%= link_to 'Edit', admin_edit_librarian_path(librarian) %></td>
        <%else%>
          <td><%= link_to 'Edit', edit_librarian_path(librarian) %></td>
        <% end %>
        <td><%= link_to 'Destroy', librarian, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%if session[:user_type] == ApplicationController::TYPE_ADMIN %>
          <td><%= link_to 'Approve', approve_librarian_path(librarian) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

