<% if notice != nil %>
  <h6 id="alert" class="alert alert-info" style="text-align: center; margin-top: 0;"><%= notice %></h6>
<% end %>

<h4 align="center">Students</h4>

<div class="card-scrollable">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <!-- <th>Password</th> No Need to show this attribute-->
      <th>Edu level</th>
      <th>Book limit</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.email %></td>
        <td><%= student.name %></td>
        <!-- <td>< student.password ></td> No Need to show this attribute-->
        <td><%= student.edu_level %></td>
        <td><%= student.book_limit %></td>
        <td>
          <%= link_to student do %>
            <i class="glyphicon glyphicon-fullscreen" data-toggle="tooltip" title="Student details"></i>&nbsp;
          <% end %>
          <%= link_to edit_student_path(student) do %>
            <i class="glyphicon glyphicon-edit" data-toggle="tooltip" title="Edit student"></i>&nbsp;
          <% end %>
          <%= link_to student, method: :delete, data: {confirm: 'This will delete all data associated with the student. Are you sure?'} do %>
            <i class="glyphicon glyphicon-trash" data-toggle="tooltip" title="Delete student"></i>&nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Add a new student',
            new_student_path,
            class: "btn btn-primary pull-right",
            style: "color: #ffffff; margin-right: 0;" %>

<br>