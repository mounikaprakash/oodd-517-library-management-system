<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :isbn %>
    <%= form.text_field :isbn %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :language %>
    <%= form.text_field :language %>
  </div>

  <div class="field">
    <%= form.label :published %>
    <%= form.date_select :published %>
  </div>

  <div class="field">
    <%= form.label :edition %>
    <%= form.text_field :edition %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image %>
  </div>

  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_area :summary %>
  </div>

  <% if @is_special == nil %>
    <div class="field">
      <%= form.label :is_special %>
      <select name="book[is_special]">
        <option value=""></option>
        <option value="no">No</option>
        <option value="yes">Yes</option>
      </select>
    </div>
  <% else %>
    <div class="field">
      <%= form.label :is_special %>
      <select name="book[is_special]">
        <option value=""></option>
        <option value="no" <%= @is_special == "no" ? "selected" : "" %>>No</option>
        <option value="yes" <%= @is_special == "yes" ? "selected" : "" %>>Yes</option>
      </select>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
