<p id="alert"><%= alert %></p>
<h1>Sign in </h1>

<%= form_tag sessions_path do |form| %>
  <%= link_to "Sign in with Google as Student", set_google_signup_user_type_url(:google_signup_user_type => 3) %>
  <br>
  <%= link_to "Sign in with Google as Librarian", set_google_signup_user_type_url(:google_signup_user_type => 4) %>
  <br>
  <br>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <label for="user_type">Select your affiliation with Libraries</label>
    <select name="user_type">
      <option value="student">Student</option>
      <option value="librarian">Librarian</option>
      <option value="admin">Admin</option>
    </select>
  </div>
  <%# TODO: check if current_user below is required %>
  <% current_user %>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>

  <h1>Sign Up</h1>
  <%= link_to "Sign up as a student", new_student_url %>
  <br>
  <%= link_to "Sign up as a librarian", new_librarian_url %>
<% end %>
