<p id="alert"><%= alert %></p>

<h2>Library Management System</h2><br>
<h3> Login </h3> <br>
<!-- %= form_tag sessions_path do |form| % -->
<div class="container">
  <%= form_tag sessions_path, method: 'post', layout: :horizontal do  %>
    <div class="form-group">
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
      <br>

    <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
    <br>
  <div class="field">
    <label for="user_type">Select your affiliation with Libraries</label>
    <select name="user_type">
      <option value="student">Student</option>
      <option value="librarian">Librarian</option>
      <option value="admin">Admin</option>
    </select>
  </div>
    </div>
  <% current_user %>
  <div class="actions">

    <%= submit_tag "Login", class: "btn btn-success" %>
  </div>
      </form>
  </div>

  <br>
  <div>
    <%= link_to "Sign up as a student", new_student_url, :class => "btn" %> |
    <%= link_to "Sign up as a librarian", new_librarian_url, :class => "btn"%>
  </div>
  <br>

<% end %>
