<p id="notice"><%= notice %></p>

<h1>Book Counts</h1>

<table>
  <thead>
  <tr>
    <th>Book</th>
    <th>Library</th>
    <th>Count</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @book_counts.each do |book_count| %>
    <tr>
      <td><%= book_count.book.title %></td>
      <td><%= book_count.library.name %></td>
      <td><%= book_count.book_copies %></td>
      <td><%= link_to 'Show', book_count %></td>
      <td><%= link_to 'Edit', edit_book_count_path(book_count) %></td>
      <td><%= link_to 'Destroy', book_count, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book Count', new_book_count_path %>
