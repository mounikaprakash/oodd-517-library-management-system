<%= form_with(model: book_count, local: true) do |form| %>
  <% if book_count.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book_count.errors.count, "error") %> prohibited this book_count from being saved:</h2>

      <ul>
        <% book_count.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :book_id %>
    <%= form.collection_select :book_id, Book.all, :id, :title, :include_blank => true %>
  </div>

  <% if session[:user_type] == ApplicationController::TYPE_ADMIN %>
    <div class="field">
    <%= form.label :library_id %>
    <%= form.collection_select :library_id, Library.all, :id, :name, :include_blank => true %>
  </div>
  <% end %>

  <% if session[:user_type] == ApplicationController::TYPE_LIBRARIAN %>
    <div class="field">
      <%= form.label :library_id %>
      <%= form.collection_select :library_id, Library.where(:id => current_user.library_id), :id, :name, :include_blank => true %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :book_copies %>
    <%= form.number_field :book_copies %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
